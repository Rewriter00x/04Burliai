<UserControl x:Class="_01Burliai.Views.PersonInputView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:_01Burliai.Tools.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="435"
             IsEnabled="{Binding IsEnabled}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <controls:PersonInput Grid.Row="0" PersonName="{Binding Name, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" PersonSurname="{Binding Surname, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" PersonEmail="{Binding Email, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" Birthday="{Binding Birthday, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" ProceedCommand="{Binding ProceedCommand}"></controls:PersonInput>
        <controls:DataEditor Grid.Row="1" DataGridItems="{Binding Persons}" DeleteCommand="{Binding DeleteCommand}" FilterCommand="{Binding FilterCommand}"></controls:DataEditor>
    </Grid>
</UserControl>
